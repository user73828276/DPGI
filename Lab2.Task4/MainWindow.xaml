<Window x:Class="Lab2.Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2.Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Label DockPanel.Dock="Top" HorizontalAlignment="Center">Label</Label>
            <TextBox DockPanel.Dock="Left" Width="200">TextBox</TextBox>
            <TextBox DockPanel.Dock="Right" Width="200">TextBox</TextBox>
            <Button DockPanel.Dock="Bottom" Margin="25 0 25 25">Button</Button>
        </DockPanel>
    </Grid>
</Window>
